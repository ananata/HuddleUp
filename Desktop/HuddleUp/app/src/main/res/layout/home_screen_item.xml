<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayoutHomeScreenEventParent"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:background="@drawable/custombgitem"
        android:layout_height="300dp">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_topRightRadius="8dp">

            <ImageView
                android:id="@+id/ImageViewHomeScreenEventPicture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_above="@id/ImageViewHomeScreenEventTitle"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/team" />

        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/ImageViewHomeScreenEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat"
            android:lineSpacingExtra="8dp"
            android:text="@string/my_teams"
            android:textColor="#374160"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/eventbadge"
            android:alpha="0"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:padding="10dp"
            android:background="@drawable/orangebadge"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/eventcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/connect"
                android:textColor="#F08C21"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>